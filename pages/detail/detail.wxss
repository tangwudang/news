/* pages/detail/detail.wxss */
.title_line{
  width: 100%;
  height: 2rpx;
  background: blueviolet
}

.news_detail{
  padding: 30rpx;
}

/** 标题 **/
.detail_title{
  font-size: 50rpx;
  margin-top: 20rpx;
  font-weight: bold
}

/** 描述 **/
.detail_desc{
  display: flex;
  color: darkgray;
  font-size: 30rpx;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}

.detail_source{
  display: flex;
}

.source{
  margin-right: 40rpx;
}

.detail_read_count{
  display: flex;
}

/** 内容 **/
.read_text{
  margin-right: 20rpx;
}

.content_image{
  width: 100%;
}

.content_text{
  color: darkslategray;
  font-size: 34rpx;
  line-height: 50rpx;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}